{
  "name": "code-guide-demo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "babel-eslint": "9.0.0",
    "eslint": "5.12.0",
    "eslint-plugin-react": "^7.12.4",
    "lint-staged": "^8.1.5",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "2.1.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js",
    "lint-staged:style": "stylelint \"src/**/*.css\" --syntax scss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,less}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": "npm run lint-staged:js",
    "*.{css}": "npm run lint-staged:style"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "eslint-plugin-babel": "^5.3.0",
    "husky": "^1.3.1",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
